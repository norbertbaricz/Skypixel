<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#121212">
    <meta name="description" content="Browse Skypixel's portfolio of projects including Puro Discord Bot, Server Launcher, and more innovative solutions.">
    <meta name="keywords" content="Skypixel projects, Puro bot, Server Launcher, Discord moderation, Minecraft tools">
    <meta name="author" content="Skypixel Team">
    <meta property="og:title" content="Our Projects - Skypixel">
    <meta property="og:description" content="Discover Skypixel's innovative projects and software solutions.">
    <meta property="og:type" content="website">
    <meta property="og:image" content="/images/logo.png">
    <title>Our Projects - Skypixel</title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css?v=<%= assetVersion %>">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" media="print" onload="this.media='all'" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous">
</head>
<body class="has-sticky-footer">
    <div id="loader-wrapper">
        <div class="loader-content">
            <div id="loading-text-animation"></div>
        </div>
    </div>

    <div class="page-blur" aria-hidden="true"></div>
    <div id="main-content">
        <nav class="navbar">
            <div class="container">
                <a href="/" class="nav-brand">Skypixel</a>
                <a href="/about" class="btn"><i class="fas fa-users"></i> About Us</a>
            </div>
        </nav>
        <section id="projects" class="projects section-padding fade-in-scroll">
            <div class="container">
                <h2>Our Projects</h2>

                <% const releaseLookup = {
                    [`${githubUsername}/Puro`]: releaseVersions?.puro,
                    [`${githubUsername}/Server-Launcher`]: releaseVersions?.serverLauncher,
                    [`${githubUsername}/Skypixel`]: releaseVersions?.skypixelWebsite,
                    [`${githubUsername}/DakotaAC`]: releaseVersions?.dakotaAc
                }; %>

                <% const categories = projectsData?.categories || { popular: [], newReleases: [], archived: [] }; %>

                <% if (categories.popular.length) { %>
                    <div class="project-category category-popular">
                        <div class="category-header">
                            <h3>Most Popular</h3>
                            <p>Where our biggest communities gather and rely on Skypixel tools every single day.</p>
                        </div>
                        <div class="project-grid">
                            <% categories.popular.forEach((project, index) => { %>
                                <div class="project-card fade-in-scroll" style="animation-delay: <%= index * 0.1 %>s;" data-project-card
                                    data-title="<%= project.name %>"
                                    data-description="<%= project.description %>"
                                    data-tag="<%= project.topics?.[0] || project.language || 'Project' %>"
                                    data-image="<%= project.image %>"
                                    data-language="<%= project.language %>"
                                    data-stars="<%= project.stars %>"
                                    data-updated="<%= project.updatedAt || project.pushedAt || project.createdAt || '' %>"
                                    data-url="<%= project.htmlUrl %>">
                                    <img src="<%= project.image %>" alt="<%= project.name %>" loading="lazy" decoding="async" onerror="this.onerror=null;this.src='https://placehold.co/600x400/202020/e0e0e0?text=Image+Error';">
                                    <div class="project-card-content">
                                        <div>
                                            <div class="project-meta">
                                                <span class="project-status status-popular">Most Popular</span>
                                                <% if (releaseLookup[project.fullName]) { %>
                                                    <span class="project-version version-popular"><%= releaseLookup[project.fullName] %></span>
                                                <% } %>
                                            </div>
                                            <h3><%= project.name %></h3>
                                            <p><%= project.description %></p>
                                        </div>
                                        <div class="project-buttons">
                                            <a href="#" class="btn" data-project="github"><i class="fas fa-info-circle"></i> Details</a>
                                            <a href="<%= project.htmlUrl %>" target="_blank" rel="noopener" class="btn btn-secondary"><i class="fab fa-github"></i> GitHub</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <% if (categories.newReleases.length) { %>
                    <div class="project-category category-new">
                        <div class="category-header">
                            <h3>New Release</h3>
                            <p>Fresh launches that showcase what the Skypixel lab has been building lately.</p>
                        </div>
                        <div class="project-grid">
                            <% categories.newReleases.forEach((project, index) => { %>
                                <div class="project-card fade-in-scroll" style="animation-delay: <%= (index + 2) * 0.1 %>s;" data-project-card
                                    data-title="<%= project.name %>"
                                    data-description="<%= project.description %>"
                                    data-tag="<%= project.topics?.[0] || project.language || 'Project' %>"
                                    data-image="<%= project.image %>"
                                    data-language="<%= project.language %>"
                                    data-stars="<%= project.stars %>"
                                    data-updated="<%= project.updatedAt || project.pushedAt || project.createdAt || '' %>"
                                    data-url="<%= project.htmlUrl %>">
                                    <img src="<%= project.image %>" alt="<%= project.name %>" loading="lazy" decoding="async" onerror="this.onerror=null;this.src='https://placehold.co/600x400/202020/e0e0e0?text=Image+Error';">
                                    <div class="project-card-content">
                                        <div>
                                            <div class="project-meta">
                                                <span class="project-status status-new">New Release</span>
                                                <% if (releaseLookup[project.fullName]) { %>
                                                    <span class="project-version version-new"><%= releaseLookup[project.fullName] %></span>
                                                <% } %>
                                            </div>
                                            <h3><%= project.name %></h3>
                                            <p><%= project.description %></p>
                                        </div>
                                        <div class="project-buttons">
                                            <a href="#" class="btn" data-project="github"><i class="fas fa-info-circle"></i> Details</a>
                                            <a href="<%= project.htmlUrl %>" target="_blank" rel="noopener" class="btn btn-secondary"><i class="fab fa-github"></i> GitHub</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <% if (categories.archived.length) { %>
                    <div class="project-category category-eol">
                        <div class="category-header">
                            <h3>EOL (End Of Life)</h3>
                            <p>Legacy builds we’ve sunset—still available as archives for servers that need them.</p>
                        </div>
                        <div class="project-grid">
                            <% categories.archived.forEach((project, index) => { %>
                                <div class="project-card fade-in-scroll" style="animation-delay: <%= (index + 6) * 0.1 %>s;" data-project-card
                                    data-title="<%= project.name %>"
                                    data-description="<%= project.description %>"
                                    data-tag="Archived"
                                    data-image="<%= project.image %>"
                                    data-language="<%= project.language %>"
                                    data-stars="<%= project.stars %>"
                                    data-updated="<%= project.updatedAt || project.pushedAt || project.createdAt || '' %>"
                                    data-url="<%= project.htmlUrl %>">
                                    <img src="<%= project.image %>" alt="<%= project.name %>" loading="lazy" decoding="async" onerror="this.onerror=null;this.src='https://placehold.co/600x400/202020/e0e0e0?text=Image+Error';">
                                    <div class="project-card-content">
                                        <div>
                                            <div class="project-meta">
                                                <span class="project-status status-eol">End of Life</span>
                                                <% if (releaseLookup[project.fullName]) { %>
                                                    <span class="project-version version-eol"><%= releaseLookup[project.fullName] %></span>
                                                <% } %>
                                            </div>
                                            <h3><%= project.name %></h3>
                                            <p><%= project.description %></p>
                                        </div>
                                        <div class="project-buttons">
                                            <a href="#" class="btn" data-project="github"><i class="fas fa-info-circle"></i> Details</a>
                                            <a href="<%= project.htmlUrl %>" target="_blank" rel="noopener" class="btn btn-secondary"><i class="fab fa-github"></i> GitHub</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <% if (!categories.popular.length && !categories.newReleases.length && !categories.archived.length) { %>
                    <div class="project-category category-new">
                        <div class="category-header">
                            <h3>No Projects Found</h3>
                            <p>We couldn't load repositories from GitHub right now. Please check back soon.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <div id="project-popup" class="popup">
            <div class="popup-content project">
                <span class="close-btn">&times;</span>
                <div class="project-popup-grid">
                    <img id="project-image" alt="Project image" />
                    <div class="project-popup-meta">
                        <h2 id="popup-project-title">Project Details</h2>
                        <p class="project-tag" id="popup-project-tag"></p>
                        <div class="project-popup-stats" id="popup-project-stats">
                            <span id="popup-project-language"></span>
                            <span id="popup-project-stars"></span>
                            <span id="popup-project-updated"></span>
                        </div>
                        <p id="project-description">Default project description text if not overridden by JS.</p>
                    </div>
                </div>
            </div>
        </div>

        <footer class="sticky-footer">
            <p>&copy; 2025 Skypixel. All rights reserved.</p>
        </footer>
    </div>
    <script defer src="/js/script.js?v=<%= assetVersion %>"></script><script defer src="/js/projects-script.js?v=<%= assetVersion %>"></script> </body>
</html>
