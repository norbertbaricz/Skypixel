{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "fetch": "readonly",
    "AbortController": "readonly"
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-console": "off",
    "prefer-const": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["public/js/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    }
  ]
}
